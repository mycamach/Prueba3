<h1> Lista de ToDos </h1>

<% @todos.each do |t| %>
  <div class="well">
    <h2> <%= t.description %> </h2>
    <h3> <%= link_to 'Mostrar ToDo', todo_path(t.id) %> </h3>
    <h3> <%= link_to 'Editar ToDo', edit_todo_path(t.id) %> </h3>
    <h3> <%= link_to "Borrar ToDo", t, method: :delete %> </h3>
  </div>
<% end %>

<h2> <%= link_to 'Crear ToDo', todos_new_path %> </h2>
